<%- include("partials/header") -%>


    <div class="ui container center-form margin-top">
        <div class="ui basic segment">
            <div class="ui buttons">
                <a href="/blogs/<%= post._id %>" class="ui labeled icon button fixed">
                    <i class="left chevron icon"></i>
                    Back
                </a>
            </div>
        </div>
        <div>
            <div class="ui header">
                <img src="/img/avatar1.png" class="ui circular image edit-form">
                <div class="edit-form">
                    <i class="edit icon"></i>
                    <h2 style="display:-webkit-inline-box"><em><%= post.title %></em></h2>
                </div>
                
            </div>

        </div>
        <form class="ui form element-space" method="POST" action="/blogs/<%= post._id %>?_method=PUT">
            <div class="field">
                <label>Post Title</label>
                <input value="<%= post.title %>" type="text" name="post_title">
            </div>
            <div class="field">
                <label>Author</label>
                <input value="<%= post.author %>" type="text" name="post_author">
            </div>
            <div class="required field">
                <label>Post Image URL</label>
                <input type="text" name="post_image" value="<%= post.image %>" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions."
                    placeholder="https://images.unsplash.com/..." required>
                <small>Only from Unsplash.com. Click
                    <a href="https://youtu.be/Bn3weNRQRDE" target="_blank">here</a> for tutorial on how to copy unsplash urls.</small>
            </div>
            <div class="field">
                <label>What's on your mind?</label>
                <textarea id="editor" name="post_body"><%= post.body %>
                </textarea>
            </div>
            <button class="fluid ui button orange rounded-button" type="submit">Submit</button>
        </form>
    </div>

    <%- include('partials/footer') %>